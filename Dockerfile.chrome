    locales \
    ca-certificates \
    iproute2 \
    procps \
    cron \
    wget \
    curl \
    jq \
    unzip \
    && pip install --no-cache-dir -r requirements.txt \
    \
    # ğŸ”½ è‡ªåŠ¨è·å–æœ€æ–°ç‰ˆ Stable Chrome æµè§ˆå™¨
    && echo "Fetching latest Chrome ..." \
    && VERSION_URL=$(curl -s https://googlechromelabs.github.io/chrome-for-testing/last-known-good-versions-with-downloads.json \
        | jq -r '.channels.Stable.downloads["chrome"][] | select(.platform=="linux64") | .url') \
    && echo "Downloading from: $VERSION_URL" \
    && wget -O /tmp/chrome-linux64.zip "$VERSION_URL" \
    && unzip /tmp/chrome-linux64.zip -d /opt/chrome \
    && ln -sf /opt/chrome/chrome-linux64/chrome /usr/local/bin/chrome \
    && rm -rf /tmp/chrome-linux64.zip \
    \
    # æ¸…ç†ç¼“å­˜ï¼Œå‡å°ä½“ç§¯
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

